<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:persistent="false">

    <PreferenceCategory android:title="@string/settings_category_name">

        <EditTextPreference
            android:key="settings_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_user_name" />
    </PreferenceCategory>
    <SwitchPreference
        android:defaultValue="false"
        android:key="settings_privacy_switch"
        android:title="@string/settings_value_privacy" />
</PreferenceScreen>